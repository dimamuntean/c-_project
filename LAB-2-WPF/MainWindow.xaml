<Window x:Class="LAB_2_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LAB_2_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        TextBoxBase.TextChanged="Window_TextChanged">
    <Grid TextBoxBase.TextChanged="Grid_TextChanged">
        <RadioButton x:Name="radioButton1" Content="Handle Textbox.TextChanged in TextBox" HorizontalAlignment="Left" Margin="39,63,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="radioButton2" Content="Handle Textbox.TextChanged in Grid" HorizontalAlignment="Left" Margin="39,83,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="radioButton3" Content="Handle Textbox.TextChanged in Window" HorizontalAlignment="Left" Margin="39,103,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="39,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" TextChanged="TextBox1_TextChanged"/>
    </Grid>
</Window>
